[http]
  postBuffer = 16M

[i18n]
  commitencoding = utf-8

[merge]
  ff = false
  conflictstyle = diff3

[pager]
  diff = diff-highlight | less
  log = diff-highlight | emojify | less
  show = diff-highlight | less

[pull]
  ff = only

[push]
  default = current
  followTags = true

[status]
