[alias]
  ci = !hub ci-status -v | awk '{ print $3 }' | xargs open
  graph = log --graph --date=short --pretty=format:\"%C(yellow)<%h> %Cgreen[%ad] %Cred%an%Creset %s\"
  master = !git checkout master && git pull origin master && git fetch -p origin && git branch -d $(git branch --merged | grep -v master)
  prune = fetch --prune
  sed =  "!f() { git ls-files | xargs sed -i '' -e \"s/${1}/${2}/g\"; }; f"
  st = status -s
  stash-all = stash save --include-untracked
  undo = reset --soft HEAD^

[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  status = auto
  ui = true

[commit]
  template = ~/.commit_template

[core]
  editor = nano
  excludesfile = ~/.gitignore
  pager = less -fRX
  quotepath = false
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[diff]
  compactionHeuristic = true

