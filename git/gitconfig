[core]
  # editor = emacsclient -nw
  editor = nano
  pager = less -fRX
  quotepath = false
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore

[color]
  ui = true
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto

[i18n]
  commitencoding = utf-8

[pager]
  log = diff-highlight | emojify | less
  show = diff-highlight | less
  diff = diff-highlight | less

[commit]
  template = ~/.commit_template

[diff]
  compactionHeuristic = true

[merge]
  ff = only
  conflictstyle = diff3

[push]
  default = current
  followTags = true

[status]
  showUntrackedFiles = all

[alias]
  st = status -s
  prune = fetch --prune
  undo = reset --soft HEAD^
  stash-all = stash save --include-untracked
  ci = !hub ci-status -v | awk '{ print $3 }' | xargs open
  graph = log --graph --date=short --pretty=format:\"%C(yellow)<%h> %Cgreen[%ad] %Cred%an%Creset %s\"
  master = !git checkout master && git pull origin master && git fetch -p origin && git branch -d $(git branch --merged | grep -v master)
  sed =  "!f() { git ls-files | xargs sed -i '' -e \"s/${1}/${2}/g\"; }; f"

[url "git@github.com:"]
	insteadOf = git://github.com/
	insteadOf = https://github.com/
