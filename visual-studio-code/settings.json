{
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "golang.go",
    "editor.indentSize": 4,
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.indentSize": 4,
    "editor.tabSize": 4
  },
  "[ruby]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "[shellscript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.shellcheck": "explicit"
    },
    "editor.defaultFormatter": "timonwong.shellcheck"
  },
  "[terraform-vars]": {
    "editor.codeActionsOnSave": {
      "source.formatAll.terraform": "explicit"
    },
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[terraform]": {
    "editor.codeActionsOnSave": {
      "source.formatAll.terraform": "explicit"
    },
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "black-formatter.args": ["--line-length=120", "--target-version=py310"],
  "chat.instructionsFilesLocations": {
    ".github/instructions": true
  },
  "code-runner.enableAppInsights": false,
  "debug.internalConsoleOptions": "openOnSessionStart",
  "debug.openDebug": "openOnSessionStart",
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "docker.extension.dockerEngineAvailabilityPrompt": false,
  "docker.extension.enableComposeLanguageServer": true,
  "docker.lsp.telemetry": "off",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "LigaRictyforPowerline-Regular",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.indentSize": 2,
  "editor.letterSpacing": 0.5,
  "editor.lineHeight": 1.5,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "all",
  "editor.semanticHighlighting.enabled": true,
  "editor.showFoldingControls": "always",
  "editor.tabSize": 2,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?　、。，．・：；？！‘’“”（）〔〕［］｛｝〈〉《》「」『』【】",
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.incrementalNaming": "smart",
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "**/defaults/*.yaml": "ansible",
    "**/defaults/*.yml": "ansible",
    "**/group_vars/*.yaml": "ansible",
    "**/group_vars/*.yml": "ansible",
    "**/handlers/*.yaml": "ansible",
    "**/handlers/*.yml": "ansible",
    "**/host_vars/*.yaml": "ansible",
    "**/host_vars/*.yml": "ansible",
    "**/meta/*.yaml": "ansible",
    "**/meta/*.yml": "ansible",
    "**/tasks/*.yaml": "ansible",
    "**/tasks/*.yml": "ansible",
    "**/vars/*.yaml": "ansible",
    "**/vars/*.yml": "ansible",
    "*.slm": "slim"
  },
  "files.autoGuessEncoding": true,
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.venv": true,
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/vendor": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "flake8.args": [
    "--exclude=.git,.venv,plugin-builder/src/qmonus_sdk_plugins/libs/",
    "--ignore=B006,B007,B008,B011,B015,B018,B904,B905,E203,E226,E266,E303,E304,E402,E501,E741,F401,F403,F405,F541,F723,F821,F841,W503",
    "--max-line-length=120"
  ],
  "git.allowForcePush": true,
  "git.autoStash": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreLegacyWarning": true,
  "git.ignoreMissingGitWarning": true,
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.nextEditSuggestions.enabled": true,
  "githubPullRequests.fileListLayout": "flat",
  "githubPullRequests.pullBranch": "never",
  "gitmoji.addCustomEmoji": [
    {
      "code": ":sparkles:",
      "description": "機能追加による変更",
      "emoji": "✨"
    },
    {
      "code": ":bug:",
      "description": "バグ修正による変更",
      "emoji": "🐛"
    },
    {
      "code": ":pencil:",
      "description": "ドキュメントのみの変更",
      "emoji": "📝"
    },
    {
      "code": ":art:",
      "description": "コードスタイルの変更 / typo の修正",
      "emoji": "🎨"
    },
    {
      "code": ":recycle:",
      "description": "リファクタリングによる変更",
      "emoji": "♻️"
    },
    {
      "code": ":zap:",
      "description": "パフォーマンス改善のための変更",
      "emoji": "⚡"
    },
    {
      "code": ":white_check_mark:",
      "description": "テストの追加や修正による変更",
      "emoji": "✅"
    },
    {
      "code": ":arrow_up:",
      "description": "外部依存パッケージやビルドツールに関する変更",
      "emoji": "⬆️"
    },
    {
      "code": ":construction_worker:",
      "description": "CI 用の設定やスクリプトに関する変更",
      "emoji": "👷"
    },
    {
      "code": ":wrench:",
      "description": "その他の変更 (コードやテストの変更を含まない)",
      "emoji": "🔧"
    },
    {
      "code": ":rewind:",
      "description": "過去のコミットを取消すための変更",
      "emoji": "⏪"
    },
    {
      "code": ":construction:",
      "description": "作業中 (Work In Progress)",
      "emoji": "🚧"
    }
  ],
  "gitmoji.onlyUseCustomEmoji": true,
  "gitmoji.outputType": "code",
  "gopls": {
    "formatting.gofumpt": true,
    "ui.semanticTokens": true
  },
  "indentRainbow.includedLanguages": ["go", "python", "ruby"],
  "inlineChat.enableV2": true,
  "inlineChat.hideOnRequest": true,
  "isort.args": [
    "--combine-as",
    "--force-grid-wrap=0",
    "--lines-after-imports=2",
    "--line-length=120",
    "--multi-line=3",
    "--profile=black",
    "--thirdparty=ansible,pytest,qmonus_plugin_builder,qmonus_sdk_plugins,requests,tests",
    "--trailing-comma"
  ],
  "postman.mcp.notifications.postmanMCP": false,
  "python.terminal.activateEnvironment": false,
  "python.testing.pytestArgs": ["--exitfirst", "--showlocals", "--verbose"],
  "python.testing.pytestEnabled": true,
  "python.venvFolders": [".venv"],
  "redhat.telemetry.enabled": false,
  "rubyLsp.bundleGemfile": "Gemfile",
  "rubyTestExplorer.logpanel": true,
  "scm.alwaysShowActions": true,
  "search.exclude": {
    "**/.venv": true,
    "**/__pycache__": true,
    "**/vendor": true
  },
  "security.workspace.trust.enabled": false,
  "settingsSync.ignoredSettings": ["workbench.colorTheme"],
  "telemetry.telemetryLevel": "off",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.letterSpacing": 1,
  "terminal.integrated.lineHeight": 1.25,
  "terminal.integrated.scrollback": 200000,
  "terminal.integrated.stickyScroll.enabled": true,
  "terraform.languageServer.ignoreSingleFileWarning": true,
  "terraform.mcp.server.enable": false,
  "testExplorer.useNativeTesting": true,
  "vs-kubernetes": {
    "vscode-kubernetes.helm-path-mac": "/Users/hiconyan/.vs-kubernetes/tools/helm/darwin-arm64/helm",
    "vscode-kubernetes.minikube-path-mac": "/Users/hiconyan/.vs-kubernetes/tools/minikube/darwin-arm64/minikube"
  },
  "window.autoDetectColorScheme": true,
  "window.openFoldersInNewWindow": "on",
  "window.restoreWindows": "none",
  "workbench.colorTheme": "GitHub Light Default",
  "workbench.editor.alwaysShowEditorActions": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.preferredDarkColorTheme": "GitHub Dark Dimmed",
  "workbench.preferredHighContrastColorTheme": "GitHub Dark High Contrast",
  "workbench.preferredHighContrastLightColorTheme": "GitHub Light High Contrast",
  "workbench.preferredLightColorTheme": "GitHub Light Default",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.view.alwaysShowHeaderActions": true,
  "yaml.schemas": {
    "https://raw.githubusercontent.com/docker/vscode-extension/main/misc/empty.json": [
      "compose*y*ml",
      "docker-compose*y*ml"
    ]
  }
}
